{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@data-access/*": ["app/data-access/*"],
      "@domain/*": ["app/domain/*"],
      "@infrastructure/*": ["app/infrastructure/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@use-cases/*": ["app/use-cases/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
